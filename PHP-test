<?php
// Conexão com o banco de dados usando MySQLi (com falhas de segurança)
$servername = "localhost";
$username = "root";
$password = "";
$dbname = "test";

// Cria a conexão
$conn = new mysqli($servername, $username, $password, $dbname);

// Verifica a conexão
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Falha de segurança: SQL Injection
$user_input = $_GET['user_input'];
$sql = "SELECT * FROM users WHERE username = '$user_input'";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    while($row = $result->fetch_assoc()) {
        // Falha de segurança: Cross-Site Scripting (XSS)
        echo "id: " . $row["id"]. " - Name: " . $row["username"]. " - Comment: " . $_GET['comment'] . "<br>";
    }
} else {
    echo "0 results";
}

// Falha de segurança: Exposição de informações sensíveis
echo "Connected successfully to the database";

// Fecha a conexão
$conn->close();
?>
